  <script>
    const canvas = document.getElementById('heartCanvas');
    const ctx = canvas.getContext('2d');
    canvas.width = window.innerWidth;
    canvas.height = window.innerHeight;

    window.addEventListener('resize', () => {
      canvas.width = window.innerWidth;
      canvas.height = window.innerHeight;
    });

    // Fun√ß√£o para desenhar cora√ß√µes
    function drawHeart(x, y, size, color) {
      ctx.save();
      ctx.translate(x, y);
      ctx.scale(size, size);
      ctx.beginPath();
      ctx.moveTo(0, 0);
      ctx.bezierCurveTo(0, -3, -3, -3, -3, 0);
      ctx.bezierCurveTo(-3, 3, 0, 5, 0, 6);
      ctx.bezierCurveTo(0, 5, 3, 3, 3, 0);
      ctx.bezierCurveTo(3, -3, 0, -3, 0, 0);
      ctx.fillStyle = color;
      ctx.shadowColor = color;
      ctx.shadowBlur = 10;
      ctx.fill();
      ctx.restore();
    }

    // Array para cora√ß√µes da chuva
    let hearts = [];

    // Criar um cora√ß√£o novo
    function createHeart() {
      return {
        x: Math.random() * canvas.width,
        y: -20,
        size: Math.random() * 0.8 + 0.7, // cora√ß√µes maiores
        dy: Math.random() * 1.5 + 1.5,
        color: 'pink',
      };
    }

    // Animar chuva de cora√ß√µes
    function animate() {
      ctx.clearRect(0, 0, canvas.width, canvas.height);

      // Adiciona 3 cora√ß√µes por frame para uma chuva densa
      for (let i = 0; i < 3; i++) {
        hearts.push(createHeart());
      }

      hearts.forEach((heart, i) => {
        heart.y += heart.dy;
        drawHeart(heart.x, heart.y, heart.size, heart.color);
        if (heart.y > canvas.height + 20) {
          hearts.splice(i, 1);
        }
      });

      requestAnimationFrame(animate);
    }

    // Troca da imagem PB para colorida e vice-versa
    const mainImage = document.getElementById('mainImage');
    const pbSrc = "https://i.postimg.cc/HVxrX9W2/foto-pb.jpg";
    const colorSrc = "https://i.postimg.cc/s11zJ6Sv/foto-colorida.jpg";
    let isPB = true;

    mainImage.addEventListener('click', () => {
      if (isPB) {
        mainImage.src = colorSrc;
        mainImage.alt = "Foto do casal colorida";
      } else {
        mainImage.src = pbSrc;
        mainImage.alt = "Foto do casal - preto e branco";
      }
      isPB = !isPB;
    });

    window.onload = () => {
      animate();
    };
  </script>
</body>
